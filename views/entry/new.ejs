<h1>Create a new post</h1>

<form action="/entries" method="POST"> 
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" id="title" name="title" required>
  </div>

  <div class="form-group">
    <label for="user">user</label>
    <select name="userId" id="user" class="form-control" required>
      <% user.forEach(function(user) { %>
        <option value="<%= user.id %>"><%= user.getFullName() %></option>
      <% }) %>
    </select>
    <p>If your name doesn't show up, please <a href="/users/new">sign up to be a new user.</a></p>
  </div>

  <div class="form-group">
    <label for="content">Content</label>
    <textarea type="text" class="form-control" id="content" name="content" required></textarea>
  </div>

  <input type="submit" class="btn btn-primary">
</form>
