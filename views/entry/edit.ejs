<form action="/entries/<%= entry.id %>?_method=PUT" method="POST"> 
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" class="form-control" id="title" name="title" value="<%=entry.title%>">
    </div>
  
    <div class="form-group">
      <label for="content">Content</label>
      <textarea type="text" class="form-control" id="content" name="content" value="<%=entry.content%>" required> <%=entry.content%></textarea>
    </div>
  
    <input type="submit" class="btn btn-primary">
  </form>